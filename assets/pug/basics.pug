div(class='basics')
  div(class='table padding-bottom-container-2')
    div(class='main')
      span(class='name')=resume.basics.name
      span(class='label')=resume.basics.label
    div(class='side')
      ul(class='contact')
        li=resume.basics.email
        li=resume.basics.phone
        li=helper.calcLocation(resume.basics.location)
        if helper.validArray(resume.basics.profiles) || resume.basics.url
          if resume.basics.url
            li(class='article')
              a(href=resume.basics.url)!=helper.beautifyLink(resume.basics.url)
          each profile in resume.basics.profiles
            li(class='article')
              a(href=profile.url)!=helper.beautifyLink(profile.url)
  if resume.basics.summary
    div(class='summary markdown padding-container-2')!=helper.mdToHtml(resume.basics.summary)
